<h1>Gym classes</h1>

<form action="/gym_classes" method="post">
  <label>
  Select a gym class:
    <select name="gym_class_id">
      <% for gym_class in @gym_classes %>
      <option value="<%= gym_class.id %>"><%= gym_class.name %></option>
      <% end %>
    </select>
  </label>
  
  <label>
    Select a member:
    <select name="member_id">
      <% for member in @members %>
      <option value="<%= member.id %>"><%= member.name %></option>
      <% end %>
    </select>
  </label>
  
  <input class="btn btn--action" type='submit' value="Class was chosen!">
</form>