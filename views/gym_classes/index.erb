<a href="/classes/new">Add New Class</a>

<% for gym_class in @gym_classes%>
    <p>Class Name: <%= gym_class.name%></p>
     <p>Date : <%= gym_class.date%></p>
     <p>Price: <%= gym_class.price%></p>

    <form method="get" action="/gym_classes/<%= gym_class.id%>/edit">
        <input type="submit" value="Update Class"/>
    </form>

    <form method="post" action="/gym_classes/<%= gym_class.id%>/delete">
        <input type="submit" value="Delete Class"/>
    </form>
    <hr/>

<% end%>